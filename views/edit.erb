<script type="text/javascript">
  $(document).ready(function() {
    $("#showAttachments").click(function(){
      $("#attachments").toggle();
      $("#showAttachments").toggle();
      $("#hideAttachments").toggle();
    });
    $("#hideAttachments").click(function(){
      $("#attachments").toggle();
      $("#hideAttachments").toggle();
      $("#showAttachments").toggle();
    });
  });
</script>

